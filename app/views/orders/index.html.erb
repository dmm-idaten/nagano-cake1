
<% if admin_signed_in? %>
  <%= render 'layouts/admin_header' %>
<% else %>
  <%= render 'layouts/customer_header' %>
<% end %>

<div class="container">
	<div class="row">
    <div class="col mt-5">
      <h2>注文履歴一覧</h2>
    </div>
  </div>
  <div class="row">
  	<div class="col mt-8">
  		<table class="table">
	      <thead>
		      <tr>
			      <th>注文日</th>
			      <th>配送先</th>
			      <th>注文商品</th>
			      <th>支払金額</th>
			      <th>ステータス</th>
			      <th>注文詳細</th>
		      </tr>
	      </thead>
	      <tbody>
	      	<% if admin_signed_in? %>
	      		<% @orders.each do |order| %>
	      		 <tr>
			        <td><%= order.created_at %></td>
			        <td>
			        	<%= order.shipping_postcode %><br>
			        	<%= order.shipping_address %><br>
			        	<%= order.shipping_name %>
			        </td>
			        <td></td>
			        <td><%= order.order_status %></td>
			        <td><%= link_to '表示する', order_path %></td>
		        </tr>
		        <% end %>
	      	<% else %>
	      	  <% @order.each do |order| %>
	      	   <tr>
			        <td><%= order.created_at %></td>
			        <td>
			        	<%= order.shipping_postcode %><br>
			        	<%= order.shipping_address %><br>
			        	<%= order.shipping_name %>
			        </td>
			        <td></td>
			        <td><%= order.order_status %></td>
			        <td><%= link_to '表示する', order_path %></td>
		        </tr>
		        <% end %>
	      	<% end %>
	      </tbody>
      </table>
  	</div>
  </div>
</div>

<%= render "layouts/footer" %>