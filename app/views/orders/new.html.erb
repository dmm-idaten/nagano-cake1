
<%= render "layouts/customer_header" %>

<div class='container'>
  <div class='row'>
	<div class='col-8'>
	  <h3>注文情報入力</h3><br>
	  <%= form_with(model: @order, local: true, url: orders_confirm_path, method: :post) do |f| %>
	    <%= f.label :payment, "支払い方法" %><br>
	      <label>
	        <%= f.radio_button :payment, 'クレジットカード' %>
	        <%= f.label :payment, 'クレジットカード', value: 0 %>
	      </label><br>
		  <label>
		    <%= f.radio_button :payment, '銀行振込' %>
		    <%= f.label :payment, '銀行振込', value: 1 %>
		  </label><br>
	    <%= f.label :address, "お届け先" %><br>
	      <label>
	      	<%= f.radio_button :address_option, "0" %>
	      	<%= f.label :shipping_address, 'ご自身の住所', value: 0 %><br>
	      	〒<%= current_customer.postal_code %> <%= current_customer.address %><br>
	      	<%= current_customer.last_name %> <%= current_customer.first_name %>
	      </label><br>
	      <label>
	      	<%= f.radio_button :address_option, "1" %>
	      	<%= f.label :shipping_address, '登録済住所から選択', value: 1 %><br>
	      	<%= f.collection_select :address_id, current_customer.addresses, :id, :full_name  %>
	      </label><br>
	      <label>
	      	<%= f.radio_button :address_option, "2" %>
	      	<%= f.label :shipping_address, '新しいお届け先', value: 2 %><br>
	      	<%= f.label :shipping_pos, "郵便番号" %>
			<%= f.text_field :shipping_postcode %><br>
			<%= f.label :shipping_address, "住所" %>
			<%= f.text_field :shipping_address %><br>
			<%= f.label :shipping_name, "宛名" %>
			<%= f.text_field :shipping_name %>
	      </label><br>
		<%= f.submit '確認画面へ進む', class: "btn btn-success" %>
 	  <% end %>
	</div>
  </div>
</div>

<%= render "layouts/footer" %>