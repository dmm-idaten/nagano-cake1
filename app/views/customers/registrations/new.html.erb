<%= render "layouts/customer_header" %>

<div class = "container">
  <div class='row'>
    <div class="col-xs-offset-1 col-xs-8">

      <h2>新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <table class = 'table'>
        <tr class="field">
          <td><%= f.label :名前 %></td>
          <td>姓</td>
          <td><%= f.text_field :last_name, autofocus: true %></td>
          <td>名</td>
          <td><%= f.text_field :first_name, autofocus: true %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :フリガナ %></td>
          <td>セイ</td>
          <td><%= f.text_field :last_name_kana, autofocus: true %></td>
          <td>メイ</td>
          <td><%= f.text_field :first_name_kana, autofocus: true %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :メールアドレス %></td>
          <td></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :郵便番号%></td>
          <td></td>
          <td><%= f.text_field :postal_code, autofocus: true%></td>
        </tr>

        <tr class="field">
          <td><%= f.label :住所 %></td>
          <td></td>
          <td><%= f.text_field :address, autofocus: true%></td>
        </tr>

        <tr class="field">
          <td><%= f.label :電話番号 %></td>
          <td></td>
          <td><%= f.text_field :telephone_number, autofocus: true%></td>
        </tr>

        <tr class="field">
          <td><%= f.label :パスワード %></td>
          <td></td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :パスワード %>（確認用）</td>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>

      </table>

        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
        <% end %>

      <h4>すでに会員済みの方はこちら</h4>

        <%= render "devise/shared/links" %>

    </div>
  </div>
</div>