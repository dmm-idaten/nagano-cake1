<%= render "layouts/customer_header" %>

<div class = "container">
  <div class="row my-5">
    <div class="col offset-1">
      <h3>新規会員登録</h3>
    </div>
  </div>
  <div class='row'>
    <div class="col-xs-offset-1 col-xs-8">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <table class = 'table inin '>
        <tr class="field">
          <td><%= f.label :名前 %></td>
          <td>(姓)</td>
          <td><%= f.text_field :last_name, placeholder: "令和", autofocus: true, class: "border border-dark rounded", :size => "20*30" %></td>
          <td>(名)</td>
          <td><%= f.text_field :first_name, placeholder: "道子", autofocus: true, class: "border border-dark rounded", :size => "20*30" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :フリガナ %></td>
          <td>(セイ)</td>
          <td><%= f.text_field :last_name_kana, placeholder: "レイワ", autofocus: true, class: "border border-dark rounded", :size => "20*30" %></td>
          <td>(メイ)</td>
          <td><%= f.text_field :first_name_kana, placeholder: "ミチコ", autofocus: true, class: "border border-dark rounded", :size => "20*30" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :メールアドレス %></td>
          <td></td>
          <td><%= f.email_field :email, placeholder: "sample@exmple.com", autofocus: true, autocomplete: "email", class: "border border-dark rounded", :size => "20*30" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :郵便番号%></td>
          <td></td>
          <td><%= f.text_field :postal_code, placeholder: "0000000", autofocus: true, class: "border border-dark rounded", :size => "20*30" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :住所 %></td>
          <td></td>
          <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", autofocus: true, class: "border border-dark rounded", :size => "60*30" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :電話番号 %></td>
          <td></td>
          <td><%= f.text_field :telephone_number, placeholder: "00000000000", autofocus: true, class: "border border-dark rounded", :size => "20*30" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :パスワード %></td>
          <td></td>
          <td><%= f.password_field :password, autocomplete: "new-password", class: "border border-dark rounded", :size => "20*30" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :パスワード %>（確認用）</td>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-dark rounded", :size => "20*30" %></td>
        </tr>

      </table>

        <div class="actions mb-5 d-flex justify-content-center">
          <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
        </div>
        <% end %>

      <h4 class="offset-1">すでに会員済みの方はこちら</h4>
      <div class="offset-3 mb-5">
        <%= render "customers/shared/links" %>
      </div>
    </div>
  </div>
</div>

<%= render "layouts/footer" %>