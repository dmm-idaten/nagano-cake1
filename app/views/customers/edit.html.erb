<%= render 'layouts/customer_header' %>

<body>
  <div class = "container">
    <div class='row'>
      <div class="col-xs-offset-1 col-xs-8">
        <h1>会員情報編集</h1>
        <%= form_with model:@customer, local:true do |f| %>
          <table class = 'table'>
          <!--customer情報を入れる　テキストフィールド展開-->
          <tr>
            <td><%= f.label :氏名 %></td>
            <td>
              <%= f.text_field :last_name %>
              <%= f.text_field :first_name %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :カナ %></td>
            <td>
              <%= f.text_field :last_name_kana %>
              <%= f.text_field :first_name_kana %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :郵便番号 %></td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td><%= f.label :住所 %></td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td><%= f.label :電話番号 %></td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.text_field :email%></td>
          </tr>
        </table>
        <!--各リンク先のパスを入れる-->
        <div class = 'other-information'>
          <%= f.submit class: 'btn btn-secondary' %>
          <%= link_to '退会する', customer_confirm_path(current_customer),class: 'btn btn-danger' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</body>