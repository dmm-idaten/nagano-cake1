<%= render "layouts/customer_header" %>


<div class = "container my-5">
  <div class="row-sm-2  my-2">
    <div class="col  offset-1">
      <h3 class="bg-ligth">ログイン</h3>
    </div>
  </div>
  <div class="row-sm-3 offset-2 my-4">
      <h5>会員の方はこちらからログイン</h5>
  </div>


  <div class='row d-flex justify-content-center'>
    <div class="col-xs-offset-1 col-xs-8">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <table class = 'table inin'>

        <tr class="field">
          <td><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, placeholder: "sample@exmple.com", autofocus: true, autocomplete: "email", :size => "40*30", class: "form-control border border-dark rounded" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :パスワード %></td>
          <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control border border-dark rounded" %></td>
        </tr>

      </table>

      <div class="actions mb-5 d-flex justify-content-center">
        <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-2">
    <h5 class="offset-2 mb-2">会員登録またはパスワードを忘れた場合</h5>
  </div>
  <div class="offset-3"><%= render "devise/shared/links" %></div>
</div>

<%= render "layouts/footer" %>