<div class = "container">
  <div class='row'>
    <div class="col-xs-offset-1 col-xs-8">

      <h2>ログイン</h2>

      <h4>会員の方はこちらからログイン</h4>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <table class = 'table'>

        <tr class="field">
          <td><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>

        <tr class="field">
          <td><%= f.label :パスワード %></td>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>

      </table>


        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
