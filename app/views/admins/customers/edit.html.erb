
<%= render "layouts/admin_header" %>

<div class='container'>
	<div class='row'>
		<div class='col-8'>
			<h2><%= @customer.last_name %><%= @customer.first_name %>の会員情報</h2>
			<%= form_with model: @customer, url: admins_customer_path(@customer), local:true do |f| %>
			<table class="table">
	      <tr>
	      	<td>会員ID</td><td><%= @customer.id %></td>
	      </tr>
	      <tr>
		      <td>氏名</td><td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
	      </tr>
	      <tr>
	      	<td>フリガナ</td><td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
	      </tr>
	      <tr>
	      	<td>郵便番号</td><td><%= f.text_field :postal_code %></td>
	      </tr>
	      <tr>
	      	<td>住所</td><td><%= f.text_field :address %></td>
	      </tr>
	      <tr>
	      	<td>電話番号</td><td><%= f.text_field :telephone_number %></td>
	      </tr>
	      <tr>
	      	<td>会員ステータス</td>
	      	<td>
	      		<%= f.radio_button :is_deleted, :'有効', checked: true %>
  					<%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
					  <%= f.radio_button :is_deleted, :'退会' %>
					  <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
	      	</td>
	      </tr>
	      <tr>
	      	<td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
	      </tr>
      </table>
	    <% end %>
		</div>
  </div>
</div>

<%= render "layouts/footer" %>