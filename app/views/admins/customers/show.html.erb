
<%= render "layouts/admin_header" %>

<div class='container'>
	<div class='row'>
		<div class='col-8'>
			<h2><%= @customer.last_name %><%= @customer.first_name %>の会員情報</h2>
			<table class="table">
	      <tr>
	      	<td>会員ID</td><td><%= @customer.id %></td>
	      </tr>
	      <tr>
		      <td>氏名</td><td><%= @customer.last_name %><%= @customer.first_name %></td>
	      </tr>
	      <tr>
	      	<td>フリガナ</td><td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
	      </tr>
	      <tr>
	      	<td>郵便番号</td><td><%= @customer.postal_code %></td>
	      </tr>
	      <tr>
	      	<td>住所</td><td><%= @customer.address %></td>
	      </tr>
	      <tr>
	      	<td>電話番号</td><td><%= @customer.telephone_number %></td>
	      </tr>
	      <tr>
	      	<td>メールアドレス</td><td><%= @customer.email %></td>
	      </tr>
	      <tr>
	      	<td>会員ステータス</td><td><%= @customer.is_deleted %></td>
	      </tr>
      </table>
      <div>
      	<%= link_to '編集する', edit_admins_customer_path(@customer), class: "btn btn-sm btn-success" %>
      	<div>注文履歴一覧を見る</div>
      </div>
		</div>
  </div>
</div>

<%= render "layouts/footer" %>
