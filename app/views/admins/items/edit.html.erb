<%= render "layouts/admin_header" %>

<div class="container">
  <div class="row">
    <h1>商品編集</h1>
  </div>
  <div class="row">
    <%= form_with model: @new_item, url: admins_item_path, method: :patch, local:true do |f| %>
    <table>
      <tbody>
        <tr>
          <td>商品画像</td>
          <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td>
            <%= select :genre,:name, Item.genres.keys.to_a %>
          </td>
        </tr>
        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <label><%= f.radio_button :is_active, "true" %>販売中</label>
            <label><%= f.radio_button :is_active, "false" %>販売停止中</label>
          </td>
        </tr>
      </tbody>
    </table>
    <%= f.submit '変更を保存',  class: "btn btn-success" %>
    <% end %>
  </div>
</div>

<%= render "layouts/footer" %>