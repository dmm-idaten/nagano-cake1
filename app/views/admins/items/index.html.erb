<%= render "layouts/admin_header" %>

<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col mt-5">
      <h2>商品一覧</h2>
    </div>
    <div class="col mt-5">
      <%= link_to new_admins_item_path do %>
        <p>＋</p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜き価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admins_item_path(item) do %>
            <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price %>円</td>
          <td><%= item.genre.name %></td>
          <td class="text-success"><%= item.is_active %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= render "layouts/footer" %>