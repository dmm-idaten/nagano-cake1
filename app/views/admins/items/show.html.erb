<%= render "layouts/admin_header" %>

<div class="container my-5">
  <p id="notice text-success"><%= notice %></p>
  <h2>商品詳細</h2>
  <div class="row">
    <div class="col"><%= attachment_image_tag(@item, :image, :fill, 500, 300,  fallback: "no_image .jpeg", size:'500x300') %></div>
    <div class="col">
      <table class="table">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %> </td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格（税抜価格）</td>
            <td><%= @item.add_tax_price %>（<%= @item.price %>）円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td class="text-success"><%= @item.is_active %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "編集する", edit_admins_item_path(@item), class: "btn btn-success"%>
    </div>
  </div>
</div>

<%= render "layouts/footer" %>

