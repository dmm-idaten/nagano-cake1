<%= render "layouts/admin_header" %>

<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <h1>新規登録</h1>
  </div>
  <div class="row">
    <%= form_with model: @new_item, url: admins_items_path, local:true do |f| %>
    <table>
      <tbody>
        <tr>
          <td>商品画像</td>
          <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name, placeholder: "商品名" %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "ジャンルを選択してください" %>
          </td>
        </tr>
        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price, placeholder: "1000" %>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <label>
              <%= f.radio_button :is_active, :"販売中",checked: true %>
              <%= f.label :is_active, "販売中", {value: :false, style: "display: inline-block;"} %>
              <%= f.radio_button :is_active, :"販売停止中" %>
              <%= f.label :is_active, "販売停止中", {value: :true, style: "display: inline-block;"} %>
            </label>
          </td>
        </tr>
      </tbody>
    </table>
    <%= f.submit '新規登録',  class: "btn btn-success" %>
    <% end %>
  </div>
</div>

<%= render "layouts/footer" %>