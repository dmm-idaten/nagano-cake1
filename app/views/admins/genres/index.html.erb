
<%= render "layouts/admin_header" %>


<div class="container">
  <h3>ジャンル一覧・追加</h3>
  <div class="row">
    <table>
      <%= form_with model: @genre_new, url: admins_genres_path, local:true do |f| %>
        <th><h5>ジャンル名</h5></th>
        <th><%= f.text_field :name %></th>
        <th><%= f.submit '新規登録', class: "btn btn-success"%></th>
      <% end %>
    </table>
  </div>
  <div class="row">
    <div class="col-md-6 col-sm-10">
    <table class="table table-hover table-inverse">
      <thead class="bg-light">
        <tr>
          <th></th>
          <th class="align-self-start">ジャンル</th>
          <th></th>
        </tr>
      </thead>
    </div>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td></td>
          <td><%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-success"%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>