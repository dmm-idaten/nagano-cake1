<div class="container">
  <h2>ジャンル一覧・追加</h2>
  <div class="row">
    <table>
      <%= form_with model: @genre_new, url: admins_genres_path, local:true do |f| %>
        <th><h5>ジャンル名</h5></th>
        <th><%= f.text_field :name %></th>
        <th><%= f.submit '新規登録', class: "btn btn-success"%></th>
      <% end %>
    </table>
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>ジャンル</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td></td>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_genre_path(genre), class: "btn btn-success"%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>