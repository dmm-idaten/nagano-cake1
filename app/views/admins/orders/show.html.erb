<%= render "layouts/admin_header" %>

<div class="container">
	<div class="row">
    <div class="col mt-5">
      <h2>注文履歴詳細</h2>
    </div>
  </div>
  <div class="row">
  	<div class="col mt-8">
  		<table class="table">
		    <tr>
			    <td>購入者</td><td></td>
			    <td>注文日</td><td></td>
			    <td>配送先</td><td></td>
			    <td>支払方法</td><td></td>
			    <td>注文ステータス</td><td></td>
		    </tr>
      </table>
  	</div>
  </div>
  <div class="row">
  	<div class="col mt-8">
  		<table class="table">
	      <thead>
		      <tr>
			      <th>商品名</th>
			      <th>単価(税込)</th>
			      <th>数量</th>
			      <th>小計</th>
			      <th>制作ステータス</th>
		      </tr>
	      </thead>
	      <tbody>
		      <%# @customers.each do |customer| %>
		        <tr>
			        <td>商品名</td>
			        <td>単価(税込)</td>
			        <td>数量</td>
			        <td>小計</td>
			        <td>制作ステータス</td>
		        </tr>
		      <%# end %>
	      </tbody>
      </table>
  	</div>
  </div>
</div>

<%= render "layouts/footer" %>