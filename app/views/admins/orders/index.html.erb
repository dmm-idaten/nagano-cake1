<%= render "layouts/admin_header" %>

<div class="container">
	<div class="row">
    <div class="col mt-5">
      <h2>注文履歴一覧</h2>
    </div>
  </div>
  <div class="row">
  	<div class="col mt-8">
  		<table class="table">
	      <thead>
		      <tr>
			      <th>購入日時</th>
			      <th>購入者</th>
			      <th>注文個数</th>
			      <th>注文ステータス</th>
		      </tr>
	      </thead>
	      <tbody>
	        <% @orders.each do |order| %>
	      	  <tr>
			        <td>
			        	<%= link_to admins_order_path(order) do %>
			        		<%= order.created_at.strftime('%Y/%m/%d') %>
			        	<% end %>
			        </td>
			        <td>
			        	<%= order.shipping_postcode %><br>
			        	<%= order.shipping_address %><br>
			        	<%= order.shipping_name %>
			        </td>
			        <td>
			        	<%= total_amount(order.order_details) %>
			        </td>
			        <td><%= order.order_status %></td>
		        </tr>
	      	<% end %>
	      </tbody>
      </table>
  	</div>
  </div>
</div>
<%= render "layouts/footer" %>