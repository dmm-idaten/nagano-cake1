<h2>ジャンル一覧・追加</h2>
<table>
  <%= form_with model:@genre_new, local:true do |f| %>
    <th><h4>ジャンル名</h4></th>
    <th><%= f.text_field :name %></th>
    <th><%= f.submit '新規登録', class: "btn btn-success"%></th>
  <% end %>
</table>

<table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>ジャンル</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_genre_path(genre), class: "btn btn-success"%></td>
      </tr>
      <% end %>
    </tbody>
</table>