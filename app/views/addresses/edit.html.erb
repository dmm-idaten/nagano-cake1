<%= render 'layouts/customer_header' %>

<body>
  <div class = "container">
    <div class='row'>
      <div class="col-xs-offset-1 col-xs-8">
        <h1>配送先編集</h1>
        <%= form_with model:@address, local:true do |f| %>
          <table class = 'table'>
          <!--customer情報を入れる　テキストフィールド展開-->

          <tr>
            <td><%= f.label :郵便番号 %></td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td><%= f.label :住所 %></td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td><%= f.label :宛名 %></td>
            <td><%= f.text_field :name %></td>
          </tr>

        </table>
        <!--各リンク先のパスを入れる-->
        <div class = 'other-information'>
          <%= f.submit class: 'btn btn-secondary' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</body>